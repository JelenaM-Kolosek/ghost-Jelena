<%= form_for(@user, url: user_path(@user.id), method: 'put') do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
  
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :full_name %>
      <%= form.text_field :full_name %>
    </div>
  
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <% if current_user.admin? %>
    <div class="field">
    <%= form.label :role %>
    <%= form.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
  </div>
  <% end %>

  <div class="field">
  <%= form.label :bio %>
  <%= form.text_field :bio %>
</div>

<div class="field">
<%= form.label :slug %>
<%= form.text_field :slug %>
</div>

<%= link_to 'Change password', edit_user_password_path(current_user.id) %>

  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>