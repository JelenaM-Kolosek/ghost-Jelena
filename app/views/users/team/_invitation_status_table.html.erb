<table class="table table-striped">
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Status</th>
        <th>Expires in</th>
      </tr>
    </thead>
    <tbody>
    <% User.pending.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>Pending</td>
        <td><%= distance_of_time_in_words((user.invitation_sent_at + 7.days), Time.now)%> </td>
      </tr>
      <%end%>
    </tbody>
  </table>