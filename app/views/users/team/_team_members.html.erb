<table class="table table-striped">
    <thead>
      <tr>
        <th>Image</th>
        <th>Full name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Last seen</th>
      </tr>
    </thead>
    <tbody>
    <% @accepted_users.each do |user| %>
      <tr>
        <td><%= user.image %></td>
        <td><%= link_to  user.full_name , user_path(user), class: "pointer"%></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.last_sign_in %></td>
      </tr>
      <%end%>
    <%= paginate @accepted_users %>
    <%= link_to_next_page @accepted_users, 'Next Page' %>
    </tbody>
  </table>