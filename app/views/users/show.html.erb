<div class="k-user-wrapper">
 <%= @user.image%>
<p>
  <strong>Full name:</strong>
  <%= @user.full_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<p>
  <strong>Role:</strong>
  <%= @user.role %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @user.bio %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @user.slug %>
</p>

<% if current_user.admin? %>
<%= link_to 'Edit', edit_user_path(@user.id), class: 'btn btn-primary k-btn' %>
<%= link_to 'Delete', user_path(@user), method: :delete, data: {confirm: "Do you really want to delete user #{@user.full_name}?"},class: 'btn btn-primary k-btn' %>
<%end%>
</div>