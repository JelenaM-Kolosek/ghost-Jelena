<%= link_to 'Add story', new_story_path, class:" btn btn-primary k-story-btn" %>
  <div class="search-form">
    <%= form_tag(stories_path, method: :get) do %>
      <%= text_field_tag :search, params[:search], class: "search-field k-search-input" %>
      <%= submit_tag "Search", class: "btn btn-primary k-story-btn"%>
    <%end%>
    </div>
<% @stories.each do |story| %>
<div class="k-background">
  <div class="k-wrapper">
      <p><%= link_to story.title, story_path(story) %></p>
      <p><%= story.user.full_name %></p>
  </div>
</div>
<%end%>
<div class="pagination">
  <%= paginate @stories %>
  <%= link_to_next_page @stories, 'Next Page' %>
</div>
