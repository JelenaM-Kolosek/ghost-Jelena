<h1>New story</h1>
<%= form_for(@story, url: stories_path, html: { method: :post }) do |form| %>
  <div class="form-group">
  <%= form.label :title%>
  <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :tag_list%>
    <%= form.text_field :tag_list, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :content%>
    <%= form.text_field :content, class: "form-control" %>
  </div>
  <div class="actions">
      <%= form.submit "Submit", class: "btn btn-primary k-story-btn"%>
</div>
<%end%>