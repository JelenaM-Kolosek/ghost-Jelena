<table class="table table-striped">
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Status</th>
        <th>Expires in</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <% if user.invitation_token == nil || user.invitation_token == "" %>
        <td>Accepted</td>
        <td></td>
        <%else%>
        <td>Pending</td>
        <td><%= distance_of_time_in_words((user.invitation_sent_at + 7.days), Time.now)%> </td>
        <%end%>
      </tr>
      <%end%>
    </tbody>
  </table>